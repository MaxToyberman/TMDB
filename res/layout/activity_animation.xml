<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.toyberman.tmdb.AnimationActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_movie_animation"
        android:background="@drawable/movie"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_stars"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best Movies"
        android:fontFamily=""
        android:id="@+id/tv_best_movies"
        android:layout_alignTop="@+id/iv_stars"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_by"
        android:text="By Toyberman Maxim"
        android:layout_below="@+id/iv_movie_animation"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
